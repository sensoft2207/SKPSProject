<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context="com.mxicoders.skepci.activity.ActivityLoginScreen">

    <!--layout main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--layout one-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>

            </LinearLayout>
            <!--one end-->

        </LinearLayout>
        <!--layout one end-->

        <!--layout two-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:paddingBottom="5dp"
                android:background="@drawable/login_linear_shape_top"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.mxicoders.skepci.font.MyTextViewItalic
                            android:id="@+id/tv_last_name_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name_initial"
                            android:gravity="right"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="italic"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <com.mxicoders.skepci.font.MyEdittextItalic
                                    android:id="@+id/ed_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_back"
                                    android:drawableLeft="@drawable/user"
                                    android:drawablePadding="11dp"
                                    android:hint="@string/username"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:inputType="textCapWords|textCapSentences"
                                    android:paddingTop="3dp"
                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColorHint="@color/edittext_color"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyEdittextItalic
                                        android:id="@+id/ed_last_name_initial"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edittext_back"
                                        android:hint=""
                                        android:paddingTop="5dp"
                                        android:paddingLeft="5dp"
                                        android:maxLength="1"
                                        android:inputType="textCapWords|textCapSentences"
                                        android:singleLine="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColorHint="@color/edittext_color"
                                        android:textStyle="italic" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_back"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="10dp"
                            android:hint="@string/email"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColorHint="@color/edittext_color"
                            android:textStyle="italic" />

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_back"
                            android:drawableLeft="@drawable/pass"
                            android:drawablePadding="11dp"
                            android:hint="@string/password"
                            android:singleLine="true"
                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="3dp"
                            android:inputType="textPassword"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColorHint="@color/edittext_color"
                            android:textStyle="italic" />

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_back"
                            android:drawableLeft="@drawable/pass"
                            android:drawablePadding="10dp"
                            android:hint="@string/confirm_pass"
                            android:paddingBottom="3dp"
                            android:paddingLeft="5dp"
                            android:inputType="textPassword"
                            android:paddingTop="3dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColorHint="@color/edittext_color"
                            android:textStyle="italic" />

                        <com.mxicoders.skepci.font.MyTextViewItalic
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/edittext_color"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingRight="10dp">


                                <!--<Spinner
                                    android:id="@+id/sp_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/datee"
                                        android:gravity="center"
                                        android:textSize="12.5sp"
                                        android:paddingRight="10dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/dropdown" />


                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp">

                                <!--<Spinner
                                    android:id="@+id/sp_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_month"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/Month"
                                        android:gravity="center"
                                        android:textSize="12.5sp"
                                        android:paddingRight="12dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/dropdown" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <!--<Spinner
                                    android:id="@+id/sp_uear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/year"
                                        android:gravity="center"
                                        android:textSize="12.5sp"
                                        android:paddingRight="10dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/dropdown" />

                            </FrameLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <LinearLayout
                                    android:id="@+id/ln_male"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/male_female_back"
                                    android:paddingRight="10dp">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_male"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/male"
                                        android:textAllCaps="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/textcolor" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:id="@+id/ln_female"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/male_female_back_two">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_female"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/female"
                                        android:textAllCaps="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/textcolor" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <com.mxicoders.skepci.font.MyEdittextItalic
                                    android:id="@+id/ed_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_back"
                                    android:drawableLeft="@drawable/location"
                                    android:drawablePadding="11dp"
                                    android:hint="@string/city_2"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:inputType="textCapWords|textCapSentences"
                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColorHint="@color/edittext_color"
                                    android:textStyle="italic" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                >


                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:paddingLeft="10dp">


                                    <Spinner
                                        android:id="@+id/sp_statee"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/edittext_back"
                                        android:spinnerMode="dropdown">

                                    </Spinner>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|right"
                                        android:layout_marginRight="3dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/dropdown" />


                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--one end-->


            <!--two-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/login_linear_shap_bottom"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/login_button_back">

                    <com.mxicoders.skepci.font.MyTextViewRegular
                        android:id="@+id/tv_signup_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="@string/next"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/textcolor" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <!--layout two end-->

    </LinearLayout>
    <!--layout main end-->

</RelativeLayout>
