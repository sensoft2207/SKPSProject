<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/view_list_main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:showIn="@layout/patientlist_notes_item_main">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.mxicoders.skepci.font.MyTextviewBold
                android:id="@+id/tv_date_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"/>

            <com.mxicoders.skepci.font.MyTextViewRegular
                android:id="@+id/tv_day_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textSize="10sp"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <com.mxicoders.skepci.font.MyTextViewRegular
                android:id="@+id/name"
                android:textStyle="bold"
                android:layout_alignBaseline="@id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/imageView"/>

            <com.mxicoders.skepci.font.MyTextViewRegular
                android:id="@+id/description"
                android:textStyle="bold"
                android:layout_alignBaseline="@id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#AAAAAA"
                android:layout_toRightOf="@+id/imageView"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#D5E9F8">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_more"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:padding="6dp"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#7EB9E8"/>

    </LinearLayout>


</RelativeLayout>


