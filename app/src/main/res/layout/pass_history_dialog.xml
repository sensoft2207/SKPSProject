<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <!--one-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/textcolor"
                    android:orientation="vertical">


                    <!--one.one-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingLeft="10dp">

                            <com.mxicoders.skepci.font.MyTextviewBold
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/please"
                                android:gravity="center|left|top"
                                android:textStyle="normal|bold"
                                android:textColor="@color/edittext_color"/>

                            <com.mxicoders.skepci.font.MyTextViewRegular
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/dec"
                                android:gravity="center|left|top"
                                android:textStyle="normal"
                                android:paddingLeft="4dp"
                                android:textColor="@color/dialog_text"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:gravity="center"
                                android:paddingLeft="20dp">

                                <com.mxicoders.skepci.font.MyEditTextRegular
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:background="@color/colorPrimary"
                                    android:id="@+id/et_history_pass"
                                    android:textCursorDrawable="@null"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:layout_width="match_parent"
                                    android:inputType="textPassword"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="12sp"
                                    android:textColorHint="@color/textcolor"
                                    android:textColor="@color/textcolor"
                                    android:hint="@string/password" />

                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/iv_submit_pass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/chat_send"
                                    android:tint="@color/colorPrimary"/>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <!--one.one end-->

                </LinearLayout>
                <!--one end-->

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>