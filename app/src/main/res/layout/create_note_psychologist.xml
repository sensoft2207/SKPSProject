<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbarr"
                layout="@layout/toolbar_main"/>

        </LinearLayout>

    <!--layout main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--layout one-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <com.mxicoders.skepci.font.MyEdittextItalic
                    android:id="@+id/ed_note_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/note"
                    android:textStyle="italic"
                    android:textColorHint="@color/edittext_color"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:inputType="textCapWords|textCapSentences"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="11dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/edittext_back"/>

            </LinearLayout>


        </LinearLayout>
        <!--layout one end-->

        <!--layout two-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp">

                    <com.mxicoders.skepci.font.MyEdittextItalic
                        android:id="@+id/ed_note_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_back"
                        android:gravity="top"
                        android:hint="@string/write_note"
                        android:paddingTop="10dp"
                        android:inputType="textCapWords|textCapSentences"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/edittext_color"
                        android:textStyle="italic"
                        android:paddingLeft="3dp"/>
                    <!--<EditText
                        android:id="@+id/ed_note_body"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:background="@drawable/edittext_back"
                        android:hint="Write your note here"
                        android:lines="8"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:maxLines="20"
                        android:scrollbars="vertical"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/edittext_color"
                        android:textStyle="italic"
                        android:paddingLeft="3dp"/>-->


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
        <!--layout two end-->

        <!--layout four-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center|top"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/login_button_back">

                <com.mxicoders.skepci.font.MyTextViewRegular
                    android:id="@+id/tv_notes_submit"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/submit"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:textAllCaps="true"
                    android:padding="3dp"/>

            </LinearLayout>


        </LinearLayout>
        <!--layout four end-->


    </LinearLayout>
    <!--layout main end-->

    </LinearLayout>
</RelativeLayout>
