<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_user1_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:background="@drawable/round_corner">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.mxicoders.skepci.font.MyTextViewRegular
                            android:id="@+id/tv_user1_name"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                        <com.mxicoders.skepci.font.MyTextViewRegular
                            android:layout_marginRight="20dp"
                            android:layout_gravity="right"
                            android:textSize="11sp"
                            android:id="@+id/tv_user1_time"
                            android:text="05:30"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </FrameLayout>
                </LinearLayout>

                <com.mxicoders.skepci.font.MyTextViewRegular
                    android:id="@+id/tv_user1_chat_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg2" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ll_user2_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_user2_name"
                            android:layout_gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                        <com.mxicoders.skepci.font.MyTextViewRegular
                            android:textSize="11sp"
                            android:id="@+id/tv_user2_time"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:text="05:30"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </FrameLayout>
                </LinearLayout>
                <com.mxicoders.skepci.font.MyTextViewRegular
                    android:id="@+id/tv_user2_chat_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>