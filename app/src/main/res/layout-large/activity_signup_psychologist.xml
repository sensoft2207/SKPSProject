<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context="com.mxicoders.skepci.activity.ActivityLoginScreen">


    <!--layout main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--layout one-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="70dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>

            </LinearLayout>
            <!--one end-->

        </LinearLayout>
        <!--layout one end-->

        <!--layout two-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="140dp">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:paddingBottom="5dp"
                android:background="@drawable/login_linear_shape_top"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_username"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:textStyle="italic"
                            android:textColorHint="@color/edittext_color"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/user"
                            android:drawablePadding="11dp"
                            android:inputType="textCapWords|textCapSentences"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edittext_back"/>

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_email"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:textStyle="italic"
                            android:textColorHint="@color/edittext_color"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edittext_back"/>

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_pass"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:textStyle="italic"
                            android:textColorHint="@color/edittext_color"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/pass"
                            android:drawablePadding="11dp"
                            android:inputType="textPassword"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edittext_back"/>

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_cpass"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/confirm_pass"
                            android:textStyle="italic"
                            android:textColorHint="@color/edittext_color"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@drawable/pass"
                            android:inputType="textPassword"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edittext_back"/>


                        <com.mxicoders.skepci.font.MyTextViewItalic
                            android:id="@+id/tv_psy_dob_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/date_of_birth"
                            android:textStyle="italic"
                            android:textColor="@color/edittext_color"
                            android:layout_marginTop="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingRight="10dp">


                                <!--<Spinner
                                    android:id="@+id/sp_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/datee"
                                        android:gravity="center"
                                        android:paddingRight="10dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_weight="1"
                                    android:onClick="showDropDown"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/dropdown" />


                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp">

                                <!--<Spinner
                                    android:id="@+id/sp_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_month"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/Month"
                                        android:gravity="center"
                                        android:paddingRight="10dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_weight="1"
                                    android:onClick="showDropDown"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/dropdown" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                               <!-- <Spinner
                                    android:id="@+id/sp_uear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back"
                                    android:spinnerMode="dialog">

                                </Spinner>-->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_year"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/year"
                                        android:gravity="center"
                                        android:paddingRight="10dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_weight="1"
                                    android:onClick="showDropDown"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/dropdown" />

                            </FrameLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                       <!-- <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingRight="10dp">


                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                </Spinner>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/edittext_back">

                                </Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </Spinner>

                            </LinearLayout>

                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <LinearLayout
                                    android:id="@+id/ln_male"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/male_female_back"
                                    android:layout_marginTop="10dp"
                                    android:paddingRight="10dp">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_male"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/male"
                                        android:textAllCaps="true"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/textcolor" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:id="@+id/ln_female"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/male_female_back_two"
                                    android:layout_marginTop="10dp">

                                    <com.mxicoders.skepci.font.MyTextViewRegular
                                        android:id="@+id/tv_female"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="@string/female"
                                        android:gravity="center"
                                        android:textColor="@color/textcolor"
                                        android:textAllCaps="true"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--one end-->


            <!--two-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/login_linear_shap_bottom"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/login_button_back">

                    <com.mxicoders.skepci.font.MyTextViewRegular
                        android:id="@+id/tv_signup_next"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/next"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textAllCaps="true"
                        android:padding="3dp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <!--layout two end-->

    </LinearLayout>
    <!--layout main end-->

</RelativeLayout>
