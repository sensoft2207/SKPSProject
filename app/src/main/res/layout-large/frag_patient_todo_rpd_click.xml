                    android:id="@+id/ln_rpd_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ed_rpd_counter_evi_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_back"
                        android:drawableLeft="@drawable/wrong"
                        android:drawablePadding="11dp"
                        android:hint="@string/c_evidence"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="8dp"
                        android:inputType="textCapWords|textCapSentences"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/edittext_color"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/ed_rpd_counter_evi_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_back"
                        android:drawableLeft="@drawable/wrong"
                        android:drawablePadding="11dp"
                        android:hint="@string/c_evidence"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:layout_marginTop="5dp"
                        android:inputType="textCapWords|textCapSentences"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/edittext_color"
                        android:textStyle="italic"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp">

                    <ImageView
                        android:id="@+id/iv_rpd_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_icon_main"
                        android:tint="@color/colorPrimary"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_rpd_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ed_rpd_conclusion_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_back"
                        android:drawableLeft="@drawable/user_rpd"
                        android:drawablePadding="11dp"
                        android:hint="@string/conclusion"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:inputType="textCapWords|textCapSentences"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColorHint="@color/edittext_color"
                        android:textStyle="italic" />

                    <EditText
