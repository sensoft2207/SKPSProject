                                android:drawablePadding="11dp"
                                android:hint="@string/a_thougts"
                                android:paddingBottom="10dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:layout_marginTop="5dp"
                                android:singleLine="true"
