<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context="com.mxicoders.skepci.activity.ActivityLoginScreen">


    <!--layout main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--layout one-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"/>

            </LinearLayout>
            <!--one end-->

        </LinearLayout>
        <!--layout one end-->

        <!--layout two-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="50dp">


            <!--one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:paddingBottom="5dp"
                android:background="@drawable/login_linear_shape_top"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:gravity="center|top"
                        android:orientation="vertical">

                        <com.mxicoders.skepci.font.MyTextViewItalic
                            android:id="@+id/tv_head_p_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="@string/p_head"
                            android:textColor="@color/edittext_color"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:id="@+id/ln_male"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingRight="10dp">

                                    <CheckBox
                                        android:id="@+id/ch_check"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/link_account"
                                        android:textColor="@color/edittext_color"
                                        android:textSize="11sp"
                                        android:textStyle="italic" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="10dp">

                                <LinearLayout
                                    android:id="@+id/ln_female"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center|left">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/info" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_p_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/edittext_back"
                            android:drawableLeft="@drawable/user"
                            android:drawablePadding="11dp"
                            android:hint="@string/pyschologist_email"
                            android:inputType="text"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColorHint="@color/edittext_color"
                            android:textStyle="italic" />

                        <com.mxicoders.skepci.font.MyEdittextItalic
                            android:id="@+id/ed_p_confirm_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_back"
                            android:drawableLeft="@drawable/user"
                            android:drawablePadding="10dp"
                            android:hint="@string/pyschologist_email_confirm"
                            android:inputType="textEmailAddress"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColorHint="@color/edittext_color"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <!--one end-->

            <!--two-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/login_linear_shap_bottom"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/login_button_back">

                    <com.mxicoders.skepci.font.MyTextViewRegular
                        android:id="@+id/tv_signup_patient"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/sign_up"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:textAllCaps="true"
                        android:padding="3dp"/>

                </LinearLayout>


            </LinearLayout>
            <!--two end-->

            <!--three-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5">
                </LinearLayout>
            <!--three end-->


        </LinearLayout>
        <!--layout two end-->

    </LinearLayout>
    <!--layout main end-->

</RelativeLayout>
