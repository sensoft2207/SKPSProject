        <shape android:shape="rectangle">
            <solid android:color="#3E92DA" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#3E92DA" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
